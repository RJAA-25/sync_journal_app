<%= stylesheet_link_tag "task" %>

<div class="task-container">
  <header>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="icon"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
      />
    </svg>
    SYNC
  </header>
  <main>
    <%= form_with class:"task-form", model: @task, url: create_task_path(@url_hash) do |f|%>
      <p class="form-title">Create Task</p>
      <div>
        <%= f.text_field :details, placeholder: "Task Details" %>
        <% @task.errors.full_messages_for(:details).each do |message| %>
          <p class="error-msg"><%= message %></p>
        <% end %>
      </div>
      <div>
        <%= f.label :schedule, "Schedule", class: "form-label" %> 
        <%= f.date_field :schedule %>
        <% @task.errors.full_messages_for(:schedule).each do |message| %>
          <p class="error-msg"><%= message %></p>
        <% end %>
      </div>
      <%= f.submit "Add Task", class: "form-btn" %>
      <%= link_to "Cancel", index_user_path(current_user.username), class: "cancel" %> 
    <% end %>
  </main>
  <footer>Avion School Project Batch 14</footer>
</div>