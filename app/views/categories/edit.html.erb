<h1>Edit Category</h1>

<%= form_with model: @category, url: update_category_path(@url_hash) do |f|%>

  <div>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
    <% @category.errors.full_messages_for(:title).each do |message| %>
			<p><%= message %></p>
		<% end %>
  </div>

  <div>
    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.submit "Update" %>
  </div>

<% end %>

<hr/>
<%#= button_to "Cancel", index_user_path(@url_hash), method: :get %>
<%= link_to "Cancel", index_user_path(@url_hash) %>
