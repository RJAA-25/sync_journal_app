<h1>Login</h1>

<%= form_with scope: :session, url: login_path do |f| %>

    <div>
		<%= f.label :username, "Username" %>
		<%= f.text_field :username %>
	</div>
	<div>
		<%= f.label :password, "Password" %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.submit "Log In" %>
	</div>

<% end %>

<hr/>
<%= link_to "Home", root_path %>